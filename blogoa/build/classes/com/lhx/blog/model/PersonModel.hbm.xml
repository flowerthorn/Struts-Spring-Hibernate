<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping  package="com.lhx.blog.model">

    <class name="PersonModel" table="Person" dynamic-update="true">
        <id name="pno" column="pno">
             <generator class="assigned"></generator>
        </id>
        <property name="myname"  column="myname"/>
        <property name="mypassword" column="mypassword"/>
        <property name="nickname"  column="nickname"/>
        <property name="age"  column="age"/>
        <property name="sex"  column="sex"/>
        <property name="address"  column="address"/>
        <property name="mail"  column="mail"/>
        <property name="signature"  column="signature"/>
        <property name="joindate"  column="joindate" type="date"/>
        <property name="photo"  column="PHOTO"/>
        <property name="photoFilename"  column="PhotoFileName"/>
        <property name="photoContentType"  column="PhotoContentType"/>  
    </class>
</hibernate-mapping>
